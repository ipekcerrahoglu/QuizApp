<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:context="com.example.lenovo.justjava.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="@string/question1" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="City Name"
            android:inputType="textCapWords" />


        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:text="@string/question2"
                />

            <RadioButton
                android:id="@+id/radio_istanbul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Istanbul" />

            <RadioButton
                android:id="@+id/radio_izmir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Izmir" />

            <RadioButton
                android:id="@+id/radio_bursa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bursa" />

        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="@string/question3" />

        <CheckBox
            android:id="@+id/check_antalya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Antalya"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/check_Izmir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Izmir"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/check_mardin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Mardin"
            android:textSize="16sp" />


        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:text="@string/question4" />

            <RadioButton
                android:id="@+id/radio_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+40" />

            <RadioButton
                android:id="@+id/radio_90"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+90" />

            <RadioButton
                android:id="@+id/radio_33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+33" />

        </RadioGroup>


        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="submitQuiz"
            android:text="submit"
            android:textAllCaps="true" />

    </LinearLayout>

</ScrollView>